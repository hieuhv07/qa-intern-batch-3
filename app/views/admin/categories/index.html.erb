<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header ">
        <h4 class="card-title">
          <%= link_to t(".new_category"), new_admin_category_path, class: "btn btn-primary btn-xs right" %>
        </h4>
      </div>
      <div class="card-body ">
        <table class="table table-hover table-striped">
          <thead>
            <th>#</th>
            <th><%= t ".name" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".action" %></th>
          </thead>
          <tbody>
            <%= render @categories %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
